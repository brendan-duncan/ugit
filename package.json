{
  "name": "ugit",
  "version": "0.1.5",
  "description": "A Git client built with Electron and React",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode development && tsc src/main.ts --outDir dist --target ES2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports",
    "build:prod": "webpack --mode production",
    "build:main": "tsc src/main.ts --outDir dist --target ES2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports",
    "typecheck": "tsc --noEmit",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "git",
    "electron",
    "react"
  ],
  "author": "ugit",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/brendan-duncan/ugit"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@types/node": "^20.19.30",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.0.0",
    "smart-buffer": "^4.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.12",
    "@replit/codemirror-lang-csharp": "^6.2.0",
    "@uiw/react-codemirror": "^4.25.4",
    "diff2html": "^3.4.55",
    "electron-updater": "^6.7.3",
    "es-git": "^0.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.30.0"
  }
}
